/* pages/home/home.wxss */
page {
  height: 100%;
  background: #f7f7f7;
}
.home-page {
  height: 100%;
  display: flex;
  flex-direction: column;
}
.home-tab {
  margin-top: 10px;
}
.container {
  flex: 1;
  /* overflow: auto; */
}
.home-card {
  width: 90%;
  font-size: 24rpx;
  box-sizing: border-box;
  padding: 10rpx;
  background: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 10rpx 0rpx #ccc;
  margin: 20rpx 0;
}
.home-swiper {
  height: 360rpx;
}
.slide-image {
  height: 100%;
  width: 100%
}
.card-head {
  height: 100rpx;
  display: flex;
  align-items: center;
}
.card-mesg {
  height: 80rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.card-mesg__username {
  color: #fa7935;
}
.card-mesg__title {
  font-size: 28rpx;
  max-width:500rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.card-user-imgbox {
  height: 80rpx;
  width: 80rpx;
  border-radius: 200rpx;
}
.card-user-img {
  width: 100%;
  height: 100%;
  border-radius: 200rpx;
}
.card-content-imgbox {
  height: 220rpx;
  align-items: center;
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  overflow-y: hidden;
  overflow: auto;
}
.card-content-imgview {
  margin-right: 40rpx;
  height: 200rpx;
  width: 200rpx;
  min-height: 200rpx;
  min-width: 200rpx;
  /* display: inline-block; */
}
.card-content-imgview__img {
  max-height: 100%;
  max-width: 100%;
}
.card-content__word {
  padding: 10px 0;
  color: #999999;
  font-size: 26rpx;
}
.home-card-look {
  margin-top: 10px;
  display: inline-block;
  margin-right: 10px;
}