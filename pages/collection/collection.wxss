/* pages/collection/collection.wxss */
page {
    height: 100%;
    background: #f7f7f7;
    overflow: auto;
    box-sizing: border-box;
    padding: 20rpx;
}
.collection-page {
    flex-direction: row;
    justify-content: space-between;
    background: #f7f7f7;
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
}
.collect-item {
    width: 340rpx;
    background: #ffffff;
    border-radius: 10rpx;
    box-shadow: 0rpx 0rpx 10rpx 0rpx #ccc;
    margin-bottom: 30rpx;
    box-sizing: border-box;
    padding: 20rpx;
}

.card-head {
    display: flex;
    align-items: center;
    font-size: 24rpx;
}

.card-user-imgbox {
    height: 50rpx;
    width: 50rpx;
    border-radius: 200rpx;
}

.card-user-img {
    width: 100%;
    height: 100%;
    border-radius: 200rpx;
}

.card-title {
    margin-left: 20rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.card-container {
    margin-top: 20rpx;
    width: 300rpx;
    height: 300rpx;
    border-radius: 10rpx;
}

.card-container-img {
    height: 100%;
    width: 100%;
    border-radius: 10rpx;
}