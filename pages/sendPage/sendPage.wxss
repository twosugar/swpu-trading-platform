/* pages/sendPage/sendPage.wxss */
page {
  height: 100%;
  width: 100%;
  background: #f7f7f7;
}
.section {
  padding: 14px 15px;
  color:#495060;
  background: #ffffff;
  font-size: 28rpx;
}
.picker-title {
  display: inline-block;
  color:#495060;
  min-width:65px;
  padding-right:10px;
}
.input-and-switch {
  /* margin: 0 0 5px 0; */
  height: 99rpx;
  line-height: 82rpx;
  background: #ffffff
}
.input-and-switch .input-index--i-cell.input-index--i-input {
  width: 75%;
  float: left;
}
.inputswitch {
  float: right;
}
.price-box {
  padding: 14px 15px 0 15px;
  color:#495060;
  background: #ffffff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
.price-title {
  display: inline-block;
  min-width: 65px;
  padding-right:10px;
  color:#495060;
}
.uploader-text {
  font-size: 28rpx;
  box-sizing: border-box;
  background: #ffffff;
  color:#495060;
  padding: 14px 15px;
}
.uploader-content {
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
  
}
.user-showimg {
  position: relative;
  margin-right: 31rpx;
  margin-bottom: 20rpx;
  min-height: 200rpx;
  min-width: 200rpx;
  height: 200rpx;
  width: 200rpx;
  border-radius: 10rpx;
}
.user-showimg__image {
  max-width:100%;
  max-height:100%;
  border-radius: 10rpx;
}
.uploader-button {
  min-height: 200rpx;
  min-width: 200rpx;
  height: 200rpx;
  width: 200rpx;
  background: #f1f1f3;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
}
.close-img {
  font-size: 25rpx;
  position:absolute;
  right:0;
  top:0;
  transform:translate(40%, -40%);
  background:#fa7935;
  border-radius:100%;
  height:35rpx;
  width:35rpx;
  text-align:center;
  line-height:35rpx;
}
